        <gear xpathfilter="name = 'Sensor Array' and rating = '1'">
          <gears>
            <gear>Atmosphere Sensor</gear>
          </gears>
        </gear>
      </gears>
    </vehicle>
    <vehicle xpathfilter="gears/gear[name = 'Sensor Array' and rating = '2' and not(gears)]">
