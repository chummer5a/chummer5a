<chummer>
  <qualities>
    <!-- Hide all changelings, infected, and drakes (in that order) -->
    <quality xpathfilter="(bonus/metageniclimit != 0) or (bonus/limitcritterpowercategory = 'Infected') or contains(name, 'Carrier (HMHVV Strain') or (bonus/limitcritterpowercategory = 'Drake') or name = 'Latent Dracomorphosis'">
      <careeronly amendoperation="addnode" />
    </quality>
  </qualities>
</chummer>
