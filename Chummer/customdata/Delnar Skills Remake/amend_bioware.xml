<chummer>
  <biowares>
    <bioware>
      <bonus>
        <specificskill xpathfilter="name = 'Escape Artist' or name = 'Navigation' or name = 'Perception'" amendoperation="remove" />
        <skilllinkedattribute amendoperation="remove" />
        <skillgroup xpathfilter="name = 'Athletics'">
          <name>Prowess</name>
        </skillgroup>
        <specificskill xpathfilter="name = 'Gymnastics'">
          <name>Acrobatics</name>
        </specificskill>
      </bonus>
    </bioware>
    <bioware xpathfilter="name = 'Enhanced Articulation (2050)' or name = 'Enhanced Articulation'">
      <bonus>
        <limitmodifier>
          <condition>LimitCondition_SkillsActiveContortion</condition>
        </limitmodifier>
      </bonus>
    </bioware>
    <bioware>
      <name>Synch</name>
      <bonus>
        <physicalillusionresist>1</physicalillusionresist>
      </bonus>
    </bioware>
    <bioware>
      <name>PuSHed</name>
      <bonus>
        <specificattribute amendoperation="addnode">
          <name>LOG</name>
          <val>1</val>
        </specificattribute>
      </bonus>
    </bioware>
    <bioware>
      <name>Qualia</name>
      <bonus>
        <specificattribute amendoperation="addnode">
          <name>INT</name>
          <val>1</val>
        </specificattribute>
      </bonus>
    </bioware>
  </biowares>
</chummer>