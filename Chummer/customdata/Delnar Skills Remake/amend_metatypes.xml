<chummer>
  <metatypes>
    <metatype>
      <bonus>
        <unlockskills xpathfilter="@name = 'Assensing'" amendoperation="replace" name="Astral">Name</unlockskills>
        <specificskill xpathfilter="name = 'Perception' or name = 'Assensing' or name = 'Disguise' or name = 'Instruction' or name = 'Intimidation'" amendoperation="remove" />
        <skillgroup xpathfilter="name = 'Athletics'">
          <name>Prowess</name>
        </skillgroup>
        <specificskill xpathfilter="name = 'Palming'">
          <name>Sleight of Hand</name>
        </specificskill>
        <specificskill xpathfilter="name = 'Etiquette'">
          <name>Socialize</name>
        </specificskill>
        <specificskill xpathfilter="name = 'Leadership'">
          <name>Command</name>
        </specificskill>
        <specificskill xpathfilter="name = 'Impersonation'">
          <name>Acting</name>
        </specificskill>
        <specificskill xpathfilter="name = 'Negotiation'">
          <name>Persuade</name>
        </specificskill>
        <weaponcategorydv>
          <selectskill xpathfilter="@limittoskill='Astral Combat,Blades,Clubs,Exotic Melee Weapon,Unarmed Combat'" amendoperation="replace" limittoskill="Astral,Edged Weapons,Blunt Weapons,Unarmed Combat" />
        </weaponcategorydv>
      </bonus>
      <metavariants>
        <metavariant>
          <bonus>
            <unlockskills xpathfilter="@name = 'Assensing'" amendoperation="replace" name="Astral">Name</unlockskills>
            <specificskill xpathfilter="name = 'Perception' or name = 'Assensing' or name = 'Disguise' or name = 'Instruction' or name = 'Intimidation'" amendoperation="remove" />
            <skillgroup xpathfilter="name = 'Athletics'">
              <name>Prowess</name>
            </skillgroup>
            <specificskill xpathfilter="name = 'Palming'">
              <name>Sleight of Hand</name>
            </specificskill>
            <specificskill xpathfilter="name = 'Etiquette'">
              <name>Socialize</name>
            </specificskill>
            <specificskill xpathfilter="name = 'Leadership'">
              <name>Command</name>
            </specificskill>
            <specificskill xpathfilter="name = 'Impersonation'">
              <name>Acting</name>
            </specificskill>
            <specificskill xpathfilter="name = 'Negotiation'">
              <name>Persuade</name>
            </specificskill>
            <weaponcategorydv>
              <selectskill xpathfilter="@limittoskill='Astral Combat,Blades,Clubs,Exotic Melee Weapon,Unarmed Combat'" amendoperation="replace" limittoskill="Astral,Edged Weapons,Blunt Weapons,Unarmed Combat" />
            </weaponcategorydv>
          </bonus>
        </metavariant>
      </metavariants>
    </metatype>
  </metatypes>
</chummer>
