<chummer>
  <skills>
    <skill xpathfilter="name = 'Automatics'" amendoperation="remove" />
    <!-- This construction makes sure we don't add the Automatics specs if there's a previously loaded amend that already adds them to one or all skills -->
    <skill xpathfilter="name = 'Pistols' and count(specs/spec[text() = 'Machine Pistols']) = 0" addifnotfound="False">
      <specs>
        <spec amendoperation="addnode">Machine Pistols</spec>
      </specs>
    </skill>
    <!-- Three separate Longarms nodes needed in case there's an amend that adds one/some of the specs but not all -->
    <skill xpathfilter="name = 'Longarms' and count(specs/spec[text() = 'Submachine Guns']) = 0" addifnotfound="False">
      <specs>
        <spec amendoperation="addnode">Submachine Guns</spec>
      </specs>
    </skill>
    <skill xpathfilter="name = 'Longarms' and count(specs/spec[text() = 'Assault Rifles']) = 0" addifnotfound="False">
      <specs>
        <spec amendoperation="addnode">Assault Rifles</spec>
      </specs>
    </skill>
    <skill xpathfilter="name = 'Longarms' and count(specs/spec[text() = 'Carbines']) = 0" addifnotfound="False">
      <specs>
        <spec amendoperation="addnode">Carbines</spec>
      </specs>
    </skill>
    <!-- Removing Automatics would leave the Firearms group with 2 skills, so put Heavy Weapons in there -->
    <skill>
      <name>Heavy Weapons</name>
      <skillgroup>Firearms</skillgroup>
    </skill>
  </skills>
</chummer>
