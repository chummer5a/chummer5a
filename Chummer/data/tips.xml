        <allof>
          <cyberware>Large Smuggling Compartment</cyberware>
          <grouponeof>
            <skill>
              <name>Automatics</name>
              <val>6</val>
            </skill>
            <skill>
              <name>Automatics</name>
              <val>4</val>
              <spec>Submachine Guns</spec>
            </skill>
          </grouponeof>
        </allof>
      </required>
      <forbidden>
