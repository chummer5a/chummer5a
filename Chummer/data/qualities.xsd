<?xml version="1.0" encoding="utf-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <xs:include schemaLocation="../data../bonuses.xsd" />
  <xs:include schemaLocation="../data../conditions.xsd" /> 
  <xs:element name="chummer">
    <xs:complexType>
      <xs:sequence>
