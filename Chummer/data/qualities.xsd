                              </xs:simpleContent>
                            </xs:complexType>
                          </xs:element>
                        </xs:sequence>
                      </xs:complexType>
                    </xs:element>
                    <xs:element name="powers" minOccurs="0" maxOccurs="1">
                      <xs:complexType>
                        <xs:sequence>
